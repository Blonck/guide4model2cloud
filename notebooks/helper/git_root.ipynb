   "source": [
    "import git\n",
    "\n",
    "def get_git_root(path):\n",
    "        git_repo = git.Repo(path, search_parent_directories=True)\n",
    "        git_root = git_repo.git.rev_parse(\"--show-toplevel\")\n",
    "        return git_root"
   ]
  },
  {
